@using MvcKutuphane.Models.Entity
@model List<TBL_YAZAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layoutnew.cshtml";
}

<table class="table table-striped">

    <tr style="background-color:rgb(252,178,22)">
        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>DETAY</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach(var item in Model) {
<tr>

    <td>@item.ID</td>
    <td>@item.AD</td>
    <td>@item.SOYAD </td>
    <td>@item.DETAY</td>
    <td><a href="/Writer/WriterDelete/@item.ID" class="btn btn-danger">Sil</a></td>
    <td><a href="/Writer/WriterBring/@item.ID" class="btn btn-success">Güncelle</a></td>
</tr>
    }

</table>
<a class="btn btn-primary" href="/Writer/WriterAdd/">Yeni Yazar Ekle</a>

