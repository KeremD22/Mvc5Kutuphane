@model MvcKutuphane.Models.Entity.TBL_KITAP
@{
    ViewBag.Title = "BookAdd";
    Layout = "~/Views/Shared/_Layoutnew.cshtml";
}
<form class="form-group" method="post">
    <br />
    <div>
        <label>Kitap Adı</label>
        @Html.TextBoxFor(x => x.AD, new { @class = "form-control" })
        <br />
        <label>Kitap Kategori</label>
        @Html.DropDownListFor(k => k.TBL_KATEGORI.ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
        <br />
        <label>Yazar</label>
        @Html.DropDownListFor(k => k.TBL_YAZAR.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
        <br />
        <label>Basım Yılı</label>
        @Html.TextBoxFor(x => x.BASIMYIL, new { @class = "form-control" })
        <br />
        <label>Yayınevi</label>
        @Html.TextBoxFor(x => x.YAYINEVI, new { @class = "form-control" })
        <br />
        <label>Sayfa Sayısı</label>
        @Html.TextBoxFor(x => x.SAYFA, new { @class = "form-control" })
        <br />


    </div>
    <br />
    <button class="btn btn-info" id="btn1">Kitap Ekle</button>


  

</form>