@model MvcKutuphane.Models.Entity.TBL_HAREKET
@{
    ViewBag.Title = "OduncDelete";
    Layout = "~/Views/Shared/_Layoutnew.cshtml";
}


@using (Html.BeginForm("OduncUpdate", "Ödünç", FormMethod.Post))
{
    <br />
    <div class="form-group">
        @Html.LabelFor(k => k.ID)
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        <br />
        <label>Kitap Adı</label>
        @Html.TextBoxFor(k => k.TBL_KITAP.AD, new { @class = "form-control" })
        <br />
        <label>Üye</label>
        @Html.TextBoxFor(k => k.TBL_UYELER.AD, new { @class = "form-control" })
        <br />
        <label>Personel</label>
        @Html.TextBoxFor(k => k.TBL_PERSONEL.PERSONEL, new { @class = "form-control" })
        <br />
        <label>Alış Tarihi </label>
        @Html.TextBoxFor(k => k.ALISTARIH, "{0:dd.MM.yyyy}", new { @class = "form-control" })
        <br />
        <label>İade Tarihi </label>
        @Html.TextBoxFor(k => k.IADETARIH, "{0:dd.MM.yyyy}", new { @class = "form-control" })
        <label>Üyenin Getirdiği Tarih</label>
        <input type="text" class="form-control" name="UYEGETIRTARIH" value="@DateTime.Now.ToShortDateString()" />
        <br />
        <label>Geç Gelen Gün Sayısı</label>
        <input type="text" class="form-control" id="Gecinput" value="@ViewBag.dgr" />
    </div>
    <div>
        <button class="btn btn-warning">Ödünç Kitabı Geri Al</button>
    </div>


}

