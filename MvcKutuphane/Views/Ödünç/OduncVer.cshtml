@model MvcKutuphane.Models.Entity.TBL_HAREKET
@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/_Layoutnew.cshtml";
}
<form class="form-group" method="post">
    <br />
    <div>
        <label>Üye ID</label>
        @Html.TextBoxFor(x => x.UYE, new { @class = "form-control" })
        @Html.DropDownListFor(k => k.TBL_UYELER.ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
        <br />
        <label>Kitap ID</label>
        @Html.DropDownListFor(k => k.TBL_KITAP.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
        <br />
        <label>Personel ID</label>
        @Html.DropDownListFor(k => k.TBL_PERSONEL.ID, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })
        <br />
        <label>Kitap Alış Tarihi</label>
        <input type="text" class="form-control" name="ALISTARIH" value="@DateTime.Now.ToShortDateString()" />
        <br />

        <label>Kitap İade Tarihi</label>
        <input type="text" class="form-control" name="IADETARIH" value="@DateTime.Now.AddDays(7).ToShortDateString()" />
        <br />
    </div>
    <br />
    <button class="btn btn-info" id="btn1">Kitabı Ödünç Ver</button>
    <input type="hidden"value="false"name="ISLEMDURUM" />

</form>

