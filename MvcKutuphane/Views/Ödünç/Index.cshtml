@using MvcKutuphane.Models.Entity
@model List<TBL_HAREKET>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layoutnew.cshtml";
}

<h2>ÖDÜNÇ KİTAP LİSTESİ</h2>

<table class="table table-bordered">


    <tr>
        <th>İŞLEMID</th>
        <th>Kitap Adı</th>
        <th>ÜYE</th>
        <th>PERSONEL</th>
        <th>ALIŞ TARİHİ</th>
        <th>İADE TARİHİ</th>
        <th>İADE AL</th>
       
    </tr>
    @foreach (var item in Model)
    {
<tr>

    <td>@item.ID</td>
    <td>@item.TBL_KITAP.AD</td>
    <td>@item.TBL_UYELER.AD&nbsp @item.TBL_UYELER.SOYAD</td>
    <td>@item.TBL_PERSONEL.PERSONEL</td>
    <td>@Convert.ToDateTime(item.ALISTARIH).ToString("dd-MM-yyyy")</td>
    <td>@Convert.ToDateTime(item.IADETARIH).ToString("dd-MM-yyyy")</td>
    <td><a href="/Ödünç/OduncDelete/@item.ID" class="btn btn-danger" style="background-color:aquamarine">Kitabı Geri İade Et</a></td>

</tr>
    }

</table>




