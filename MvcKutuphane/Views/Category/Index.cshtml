@using MvcKutuphane.Models.Entity
@model List<TBL_KATEGORI>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layoutnew.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>KATEGORİ ID </th>
        <th>KATEGORİ ADI </th>
        <th>SİL </th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach(var item in Model) {
<tr>
    <td>@item.ID</td>
    <td>@item.AD</td>
    <td><a href="/Category/CategoryDelete/@item.ID" class="btn btn-danger">Sil</a></td>
    <td><a href="/Category/CategoryUpdate/@item.ID" class="btn btn-success">Güncelle</a></td>
</tr>
    }
</table>
<a href="/Category/CategoryAdd/"class="btn btn-primary">Yeni Kategori Ekle</a>